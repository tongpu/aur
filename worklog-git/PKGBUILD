# Maintainer: Lukas Grossar <lukas DOT grossar AT gmail DOT com>

pkgname=worklog-git
pkgver=VERSION
pkgrel=1
pkgdesc="worklog helps you track what you're currently working on"
arch=('any')
url="https://github.com/winged/worklog"
license=('unknown')
groups=()
depends=('python')
makedepends=('git')
provides=('worklog')
conflicts=('worklog')
replaces=('worklog')

_gitroot=git://github.com/winged/worklog.git
_gitname=worklog

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$pkgdir"
  install -d usr/bin
  install "$srcdir"/"$_gitname"/work usr/bin/
}

# vim:set ts=2 sw=2 et:
